    <script>
        // Set the primary color for the option card background (used in CSS)
        document.documentElement.style.setProperty('--primary-color-rgb', '187, 134, 252'); // RGB for #bb86fc
        document.documentElement.style.setProperty('--secondary-color-rgb', '255, 140, 148'); // RGB for #ff8c94

        /* --- SECTION MANAGEMENT --- */
        function nextSection(nextId) {
            const currentSection = document.querySelector('.section.active');
            const nextSection = document.getElementById(nextId);

            if (currentSection) {
                currentSection.classList.remove('active');
                currentSection.style.transform = 'translateY(-20px)';
                currentSection.style.opacity = '0';
            }

            setTimeout(() => {
                if (nextSection) {
                    nextSection.classList.add('active');
                    nextSection.style.transform = 'translateY(0)';
                    nextSection.style.opacity = '1';
                }
            }, 500); // Wait for fade-out before showing next section
        }

        /* --- QUIZ INTERACTIVITY --- */
        document.getElementById('quiz-form').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Check if all questions are answered
            const totalQuestions = 10;
            let answeredCount = 0;
            for (let i = 1; i <= totalQuestions; i++) {
                if (document.querySelector(`input[name="q${i}"]:checked`)) {
                    answeredCount++;
                }
            }

            if (answeredCount === totalQuestions) {
                // Show result message and transition
                document.getElementById('quiz-result').style.display = 'block';
                document.getElementById('quiz-submit').style.display = 'none';

                setTimeout(() => {
                    nextSection('final-section');
                    startTypingAnimation();
                }, 2000); // 2 seconds delay to let the result sink in
            } else {
                alert('Please answer all the questions to unlock the secret!');
            }
        });


        /* --- FINAL PAGE TYPING ANIMATION --- */
        const secretMessage = `Even from miles away, you‚Äôre my calm and my chaos ‚Äî
my favorite part of every day.
This LoveBox isn‚Äôt about perfection,
it‚Äôs about ‚Äòus‚Äô ‚Äî real, rare, and ours only. üí´`;
        
        const typingElement = document.getElementById('typing-message');
        const revealBtn = document.getElementById('reveal-surprise-btn');

        function startTypingAnimation() {
            typingElement.innerHTML = '';
            typingElement.style.borderRight = '3px solid var(--secondary-color)'; // Enable cursor
            let i = 0;
            
            const typingInterval = setInterval(() => {
                if (i < secretMessage.length) {
                    typingElement.innerHTML += secretMessage.charAt(i).replace('\n', '<br>');
                    i++;
                } else {
                    clearInterval(typingInterval);
                    typingElement.style.borderRight = 'none'; // Remove cursor
                    revealBtn.style.display = 'block'; // Show final button
                }
            }, 60); // Speed of typing
        }

        /* --- FINAL SURPRISE REVEAL --- */
        revealBtn.addEventListener('click', () => {
            revealBtn.style.display = 'none';
            document.getElementById('surprise-reveal').style.display = 'block';
        });

        /* --- AUDIO CONTROL (Optional) --- */
        const music = document.getElementById('bg-music');
        // This is a common pattern to handle browser autoplay policies.
        // You might need a user gesture (like the "Open the Box" click) to start audio.
        document.getElementById('home-section').querySelector('.glowing-btn').addEventListener('click', () => {
            // Uncomment the next line if you add a music source and need to start it on click
            // music.play().catch(e => console.log("Music play failed:", e)); 
        });

        // Loop through all option-cards to attach click handler for border glow
        document.querySelectorAll('.option-card').forEach(card => {
            card.addEventListener('click', () => {
                const radio = card.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                    // Manually handle the style update for all sibling cards
                    const parent = card.closest('.question-container');
                    parent.querySelectorAll('.option-card span').forEach(span => {
                        span.style.borderColor = 'transparent';
                        span.style.background = 'rgba(var(--primary-color-rgb, 187, 134, 252), 0.1)';
                        span.style.boxShadow = 'none';
                    });
                    
                    // Apply style to the checked card's span
                    card.querySelector('span').style.borderColor = 'var(--secondary-color)';
                    card.querySelector('span').style.background = 'rgba(var(--secondary-color-rgb, 255, 140, 148), 0.3)';
                    card.querySelector('span').style.boxShadow = '0 0 8px var(--secondary-color)';
                }
            });
        });
    </script>
</body>
